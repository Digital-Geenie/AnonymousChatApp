<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/mainLinearLayout">

    <TextView
        android:id="@+id/selectedTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text = "Category"/>


    <TextView
        android:id="@+id/selectedTopicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"/>


    <TextView
        android:id="@+id/shortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text = "Short Description"/>


    <TextView
        android:id="@+id/shortDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"/>


    <TextView
        android:id="@+id/detailedDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text = "Description"/>

    <TextView
        android:id="@+id/detailedDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text = "Short Description"/>


    <Button
        android:id="@+id/chatNow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:color= "#66ff0000"
        android:alpha="0.6"
        android:background="@color/light_blue"
        android:text="Chat"/>

</LinearLayout>