<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/selnewcategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text = "Select New Category"/>

    <Spinner
        android:id="@+id/newcategories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/btn_dropdown" />


    <TextView
        android:id="@+id/shortdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text = "Enter Short Description"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/shortDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_weight="0.5"
        android:maxLength="50"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </EditText>


    <TextView
        android:id="@+id/detailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/categories"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text = "Enter Detailed Description (Optional)"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/detailedDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_weight="0.5"
        android:maxLength="150"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </EditText>

    <Button
        android:id="@+id/newCategory"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:color= "#66ff0000"
        android:alpha="0.6"
        android:layout_marginTop="40dp"
        android:background="@color/light_blue"
        android:text="Create"/>

</LinearLayout>
